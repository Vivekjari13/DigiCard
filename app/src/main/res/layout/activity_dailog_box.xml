<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDialogBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogBox"
    android:padding="20dp"

    android:background="@color/white">

    <TextView
        android:id="@+id/headerTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Header Theme"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

    <HorizontalScrollView
        android:id="@+id/headerThemeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTheme"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <LinearLayout
                android:id="@+id/splashColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/splash"
                />

            <LinearLayout
                android:id="@+id/greenColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/Green"
                />

            <LinearLayout
                android:id="@+id/blackColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/black"
                />

            <LinearLayout
                android:id="@+id/BlueColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/Blue"
                />

            <LinearLayout
                android:id="@+id/PurpleColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/Purple"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/BrownColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/Brown"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/contentBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content Theme"
        android:textSize="24sp"
        android:layout_below="@id/headerThemeColor"
        android:textColor="@color/black"
        tools:ignore="HardcodedText"/>

    <HorizontalScrollView
        android:id="@+id/contentBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentBackground"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <LinearLayout
                android:id="@+id/bg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg1"
                />

            <LinearLayout
                android:id="@+id/bg2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg2"
                />

            <LinearLayout
                android:id="@+id/bg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg3"
                />

            <LinearLayout
                android:id="@+id/bg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg4"
                />

            <LinearLayout
                android:id="@+id/bg5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg5"
                />

            <LinearLayout
                android:id="@+id/bg6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg6"
                />
            <LinearLayout
                android:id="@+id/bg7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/bg7"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/contentFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content Theme"
        android:textSize="24sp"
        android:layout_below="@id/contentBackgroundImage"
        android:textColor="@color/black"
        tools:ignore="HardcodedText"/>

    <HorizontalScrollView
        android:id="@+id/FontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentFont"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/font1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font1"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/font2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font2"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/font3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font3"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/font4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font4"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/font5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font5"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/font6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/font6"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FontStyle"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:text="RESET"
            android:background="@color/Purple"
            android:layout_marginEnd="50dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:text="CANCEL"
            android:layout_marginStart="50dp"
            android:background="@color/Purple"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>